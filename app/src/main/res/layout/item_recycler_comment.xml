<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/write"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/me_avatar_boy" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_avatar"
            android:layout_toLeftOf="@+id/tv_created_at"
            android:layout_toRightOf="@+id/iv_avatar"
            android:text="15622785906"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_alignLeft="@+id/tv_nickname"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_nickname"
            android:layout_marginTop="10dp"
            android:text="怎么样啊" />

        <TextView
            android:id="@+id/tv_created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_nickname"
            android:layout_alignParentRight="true"
            android:text="1月10日 下午2:20"
            android:textColor="@color/textGrad"
            android:textSize="10sp" />
    </RelativeLayout>


</android.support.v7.widget.CardView>